{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "CommonJS",
    "noImplicitReturns": true,    
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "mocha", "node"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
